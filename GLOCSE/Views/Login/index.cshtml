
@{
    ViewBag.Title = "index";
    Layout = null;
}
<!doctype html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <title>GLOCSE - Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/png" href="~/Content/favicon.ico" />
    <link href="~/Content/login.css" rel="stylesheet">
</head>
<body>
    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">                
                <form action="@this.Url.Action("ValidarUsuario", "Login", null)" method="post" class="login100-form validate-form">
                    <img src="~/Content/logo-login.png" class="imagelogo" />
                    <span class="login100-form-title p-b-43">
                        Iniciar Sesión
                    </span>
                    @if (TempData["usuario_incorrecto"] != null)
                    {   
                        <div style="margin-bottom:10px;">
                            <span style="color:red;margin-left: 5px;">Usuario Invalido</span>
                        </div>
                    }
                    <div class="wrap-input100 validate-input">
                        <input type="text" placeholder="Ingresa tu Usuario" class="input100 has-val" name="usuario" />
                        <span class="focus-input100"></span>
                        <span class="label-input100">Usuario</span>
                    </div>
                    <div class="wrap-input100 validate-input Normalizador">
                        <input type="password" placeholder="Ingresa tu contraseña" class="input100 has-val" name="password" />
                        <span class="focus-input100"></span>
                        <span class="label-input100">Contraseña</span>
                    </div>
                    <div class="container-login100-form-btn">
                        <input type="submit" class="login100-form-btn" value="Autenticar">
                    </div>
                </form>
                <div class="login100-more">
                    <img src="~/Content/left-logo-detail.svg" class="leftimagelogo" />
                </div>
            </div>
        </div>
    </div>
</body>
</html>

