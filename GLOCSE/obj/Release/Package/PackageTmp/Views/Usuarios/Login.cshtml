@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/UsuariosLayout.cshtml";
}



<div style="background:url('https://images.unsplash.com/photo-1413882353314-73389f63b6fd?w=1500&ixid=dW5zcGxhc2guY29tOzs7Ozs%3D')" class="account-pages"></div>
<div class="clearfix"></div>
<div class="wrapper-page">
    <div class=" card-box">
        <div class="panel-heading">
            <h3 class="text-center"> Inicia Sesión en <strong class="text-custom">GLOCSE</strong> </h3>
        </div>


        <div class="panel-body">
            <form class="form-horizontal m-t-20" action="index.html">

                <div class="form-group ">
                    <div class="col-xs-12">
                        <input id="usuario" class="form-control" type="text" required="" placeholder="Nombre de Usuario">
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-xs-12">
                        <input id="contraseña" class="form-control" type="password" required="" placeholder="Contraseña">
                    </div>
                </div>

                

                <div class="form-group text-center m-t-40">
                    <div class="col-xs-12">
                        <button id="BtIniciarSesion" class="btn btn-info btn-block text-uppercase waves-effect waves-light">Iniciar Sesión</button>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-sm-12 text-center">
                        <p>¿ No tienes cuenta ?<a href="@Url.Action("Registro", "Usuarios")" class="text-primary m-l-5"><b>Registrarte</b></a></p>
                    </div>
                </div>
            </form>

        </div>
    </div>
    
</div>









